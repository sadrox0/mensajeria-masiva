<Window x:Class="SIDM.Sender.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SIDM - Consola de Mando 911" Height="680" Width="580"
        WindowStartupLocation="CenterScreen" Background="#1A1A1A">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="110"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="40"/>
		</Grid.RowDefinitions>

		<Border Grid.Row="0" Background="#611232" BorderBrush="#A57F2C" BorderThickness="0,0,0,4">
			<StackPanel VerticalAlignment="Center" Margin="20,0">
				<TextBlock Text="GOBIERNO DE LA CIUDAD DE MÉXICO"
                           Foreground="#A57F2C" FontSize="11" FontWeight="Bold"/>
				<TextBlock Text="SECRETARÍA DE SEGURIDAD CIUDADANA"
                           Foreground="White" FontSize="14" FontWeight="SemiBold"/>
				<TextBlock Text="DIFUSIÓN DE EMERGENCIAS 911"
                           Foreground="White" FontSize="24" FontWeight="ExtraBold" Margin="0,2,0,0"/>
			</StackPanel>
		</Border>

		<Border Grid.Row="1" Background="#FFFFFF" Margin="15" CornerRadius="10">
			<StackPanel Margin="20">
				<Label Content="REDACTAR COMUNICADO OFICIAL" FontWeight="Bold" Foreground="#611232" FontSize="12"/>
				<Border BorderBrush="#CCCCCC" BorderThickness="1" CornerRadius="5" Margin="0,5,0,20">
					<TextBox Name="txtInput" Height="140" TextWrapping="Wrap" AcceptsReturn="True"
                             BorderThickness="0" Padding="10" FontSize="16" Background="#F9F9F9"/>
				</Border>

				<Label Content="NIVEL DE PRIORIDAD" FontWeight="Bold" Foreground="#611232" FontSize="12"/>
				<ComboBox Name="cbNivel" Margin="0,5,0,30" Height="45" VerticalContentAlignment="Center" FontSize="14">
					<ComboBoxItem Content="Informativo" IsSelected="True"/>
					<ComboBoxItem Content="Urgente"/>
				</ComboBox>

				<Button Content="EJECUTAR DIFUSIÓN NACIONAL" Height="60" Click="Send_Click" Cursor="Hand"
                        Background="#00B140" Foreground="White" FontWeight="Bold" FontSize="18"
                        BorderBrush="#A57F2C" BorderThickness="2">
					<Button.Resources>
						<Style TargetType="Border">
							<Setter Property="CornerRadius" Value="8"/>
						</Style>
					</Button.Resources>
				</Button>
			</StackPanel>
		</Border>

		<StatusBar Grid.Row="2" Background="#222222" BorderBrush="#A57F2C" BorderThickness="0,2,0,0">
			<StatusBarItem>
				<StackPanel Orientation="Horizontal">
					<Ellipse Width="10" Height="10" Fill="#00B140" Margin="10,0,5,0"/>
					<TextBlock Text="UNIDAD DE INTELIGENCIA CONECTADA: 192.168.137.214"
                               Foreground="#A57F2C" FontSize="10" FontWeight="Bold"/>
				</StackPanel>
			</StatusBarItem>
		</StatusBar>
	</Grid>
</Window>